<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">
<html>
	<head>
		<title>crooner</title>
		<link type="text/css" rel="stylesheet" href="/crooner.css"></link>
		<link type="text/css" rel="stylesheet" href="/dp.SyntaxHighlighter/Styles/SyntaxHighlighter.css"></link>
		<script language="javascript" src="/dp.SyntaxHighlighter/Scripts/shCore.js"></script>
		<script language="javascript" src="/dp.SyntaxHighlighter/Scripts/shBrushCss.js"></script>
		<script language="javascript" src="/dp.SyntaxHighlighter/Scripts/shBrushJScript.js"></script>
		<script language="javascript" src="/dp.SyntaxHighlighter/Scripts/shBrushRuby.js"></script>
		<script language="javascript" src="/dp.SyntaxHighlighter/Scripts/shBrushXml.js"></script>
		<script language="javascript">
		window.onload = function(e) {
			dp.SyntaxHighlighter.ClipboardSwf = '/flash/clipboard.swf';
			dp.SyntaxHighlighter.HighlightAll('code');	
		};
		</script>
	</head>
	<body>
		<div id="nav">
			<ul>
				<li><a href="#slide_new">new slide</a></li>
				<li><hr /></li>
				<% Slide.all.each do |s| %>
				<li>
					<a href="#slide_<%= s.id %>"><%= s.title %></a> 
					<a href="/<%= s.id %>/edit"><img src="/images/edit.png" alt="edit" /></a> 
					<a href="/<%= s.id %>/destroy"><img src="/images/delete.png" alt="delete" /></a>
				</li>
				<% end %>
			</ul>
		</div>
		<%= yield %>
	</body>
</html>
